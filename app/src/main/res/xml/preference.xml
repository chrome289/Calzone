<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Settings">
    <CheckBoxPreference
        android:key="start_at_boot"
        android:title="Start on Boot"
        android:defaultValue="false"/>
    <CheckBoxPreference
            android:key="mobile_en"
            android:title="Only Monitor Mobile Data Transfer"
            android:defaultValue="false"/>

    <CheckBoxPreference
        android:key="not_pers"
        android:title="Show Persistent Notification"
        android:defaultValue="false"/>
    <EditTextPreference
            android:key="limit"
            android:title="Set Monthly Usage Limit"
            android:summary=""
            android:dialogTitle="Enter the number in MB"
            android:numeric="integer"
    />
        <CheckBoxPreference
            android:key="limit_on_wifi"
            android:title="Apply Data Transfer Limit on WIFI"
            android:defaultValue="false"/>
    </PreferenceCategory>
</PreferenceScreen>